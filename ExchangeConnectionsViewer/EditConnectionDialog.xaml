<Window x:Class="ExchangeConnectionsViewer.EditConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать подключение" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Название:" VerticalAlignment="Center" Height="15"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="TitleComboBox" Margin="10,5,0,5">
            <ComboBoxItem Content="ByBit"/>
            <ComboBoxItem Content="Binance"/>
            <ComboBoxItem Content="OKX"/>
            <ComboBoxItem Content="Bitget"/>
        </ComboBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип:" VerticalAlignment="Center" Height="15"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Name="TypeComboBox" Margin="10,5,0,5">
            <ComboBoxItem Content="Spot"/>
            <ComboBoxItem Content="Futures"/>
        </ComboBox>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Статус:" VerticalAlignment="Center" Height="15"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Name="StatusComboBox" Margin="10,5,0,5">
            <ComboBoxItem Content="Connected"/>
            <ComboBoxItem Content="Disconnected"/>
        </ComboBox>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Последнее подключение:" VerticalAlignment="Center" Height="15"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,5">
            <DatePicker Name="DatePicker" Width="150" Height="25" Margin="0,0,10,0"/>
            <TextBox Name="TimeTextBox" Width="80" Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,5">
            <Button Name="ConectButton" Background="LimeGreen" Content="Connect" Width="80" Height="30" Margin="0,0,10,0" Click="ConnectButtonClickHandler"/>
            <Button Name="DisconnectButton" Background="IndianRed" Content="Disconnect" Width="80" Height="30" Margin="0,0,10,0" Click="DisconnectButtonClickHandler"/>
            <Button Name="SaveButton" Background="Yellow" Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="SaveButtonClickHandler"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Width="170">
            <Button Name="OkButton" Background="LightBlue" Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="OkButtonClickHandler"/>
            <Button Name="CancelButton" Background="IndianRed" Content="Отмена" Width="80" Height="30" Click="CancelButtonClickHandler"/>
        </StackPanel>
    </Grid>
</Window> 